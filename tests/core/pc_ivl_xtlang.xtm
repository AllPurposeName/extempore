(xtmtest '(bind-func test_pcscale
            (lambda (type)
              (let ((scale (pc_scale 0 (Str type))))
                (if (not (null? scale))
                    (begin (list_print scale)
                           (length scale))
                    0))))

         (xtmtest (test_pcscale "blah") 0))
