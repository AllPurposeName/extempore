(sys:load "libs/core/pc_ivl_xtlang.xtm")

(xtmtest '(bind-func test_pcscale
            (lambda (type)
              (let ((scale (pc_scale 0 (Str type))))
                (if (not (null? scale))
                    (begin (list_print scale)
                           (length scale))
                    0))))

         (xtmtest (test_pcscale "blah") 0))

(xtmtest-result (test_pcscale "dorian") 1)
(xtmtest-result (test_pcscale "lydian-dominant") 0)
(xtmtest-result (test_pcscale "") 0)
