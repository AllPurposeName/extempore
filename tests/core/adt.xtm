(sys:load "tests/test.xtm")

(bind-func test_point_1
  (lambda ()
    (let ((pt (Point 9 4)))
      (+ (first pt)
         (second pt)))))

(test-xtfunc (test_point_1) 13)

(bind-func test_point_2
  (lambda ()
    (let ((pt1 (Point 9 4))
          (pt2 (Point .3 .6)))
      (+ (convert (+ (first pt1)
                     (second pt1)))
         (+ (first pt2)
            (second pt2))))))

(test-xtfunc (test_point_2) 13.9)

(print-test-results)
