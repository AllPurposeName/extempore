(sys:load "examples/external/shader-tutorials/shader-setup.xtm")

;; (call-as-xtlang
;;  (glEnable GL_PROGRAM_POINT_SIZE))

(bind-val point_data float* 15)

(bind-val vbo VBO*)
(bind-val vao VAO*)

;; init
(call-as-xtlang
 (pfill! point_data
         ;; pos      colour
          0.0  0.5   1.0 0.0 0.0
          0.5 -0.5   0.0 1.0 0.0
         -0.5 -0.5   0.0 0.0 1.0)
 (set! vbo (create_vbo point_data 15))
 (bind_vbo vbo)
 (set! vao (create_vao))
 (bind_attribute vao vbo 0 2 20 0) ;; position
 (bind_attribute vao vbo 1 3 20 8) ;; colour
 void)

(define *points-shader*
  (create_geom_shader (file->string "examples/external/shader-tutorials/geom-shader.vert")
                      (file->string "examples/external/shader-tutorials/geom-shader.geom")
                      (file->string "examples/external/shader-tutorials/geom-shader.frag")))

(bind-func gl_draw
  (lambda (program)
    (glClear GL_COLOR_BUFFER_BIT)
    (glUseProgram program)
    (draw_vertex_array vao GL_POINTS 0 3)
    void))

;; draw the points
(begin
  (gl_draw *points-shader*)
  (gl:swap-buffers *gl-window*))
