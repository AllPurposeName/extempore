      (glBindVertexArray vao)
      (glEnableVertexAttribArray 0)
      (glBindBuffer GL_ARRAY_BUFFER vbo1)
      (glVertexAttribPointer 0 size1 GL_FLOAT (convert GL_FALSE) stride1 null)
      vao)))

