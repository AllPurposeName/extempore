(sys:load "libs/external/glfw3.xtm")

(bind-val window GLFWwindow*)

(call-as-xtlang
 (glfw_init)
 (glfw_set_core_profile)
 (set! window (glfw_create_fullscreen_window))
 (glfwMakeContextCurrent window)
 (gl_print_driver_info))

;; shader stuff

(bind-val triangle_vert_data float* 15)

(bind-val vbo VBO*)
(bind-val vao VAO*)
(bind-val sp ShaderProgram)

;; init
(call-as-xtlang
 (pfill! triangle_vert_data
         ;; pos      colour
          0.0  0.5   1.0 0.0 0.0
          0.5 -0.5   0.0 1.0 0.0
         -0.5 -0.5   0.0 0.0 1.0)
 (set! vbo (VBO_create triangle_vert_data 15))
 (set! vao (VAO_create))
 (bind_attribute vao vbo 0 2 5 0) ;; position
 (bind_attribute vao vbo 1 3 5 2) ;; tex_coord
 void)

(bind-func create_triangle_shader
  (lambda (vsource:i8* fsource:i8*)
    (set! sp (ShaderProgram_create vsource fsource))))

(create_triangle_shader (file->string "examples/external/shader-tutorials/triangle.vert")
                        (file->string "examples/external/shader-tutorials/triangle.frag"))

(bind-func gl_draw
  (lambda ()
    (glClear GL_COLOR_BUFFER_BIT)
    (glUseProgram sp)
    (draw_vertex_array vao GL_TRIANGLES 0 3)
    (glfwSwapBuffers window)
    void))

;; draw the triangle
(gl_draw)
