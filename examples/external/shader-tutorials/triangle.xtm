(sys:load "examples/external/shader-tutorials/shader-setup.xtm")

(bind-val triangle_vert_data float* 15)

(bind-val vbo VBO*)
(bind-val vao VAO*)

;; init
(call-as-xtlang
 (pfill! triangle_vert_data
         ;; pos      colour
          0.0  0.5   1.0 0.0 0.0
          0.5 -0.5   0.0 1.0 0.0
         -0.5 -0.5   0.0 0.0 1.0)
 (set! vbo (create_vbo triangle_vert_data 15))
 (set! vao (create_vao))
 (bind_attribute vao vbo 0 2 5 0) ;; position
 (bind_attribute vao vbo 1 3 5 2) ;; tex_coord
 void)

(define *triangle-shader*
  (create_shader (file->string "examples/external/shader-tutorials/triangle.vert")
                 (file->string "examples/external/shader-tutorials/triangle.frag")))

(bind-func gl_draw
  (lambda (program)
    (glClear (+ GL_COLOR_BUFFER_BIT GL_DEPTH_BUFFER_BIT))
    (glUseProgram program)
    (draw_vertex_array vao GL_TRIANGLES 0 3)
    void))

;; draw the triangle
(begin
  (gl_draw *triangle-shader*)
  (gl:swap-buffers *gl-window*))
