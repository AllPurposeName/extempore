;;; Code:
(sys:load "libs/external/instruments_ext.xtm")
(sys:load "libs/external/fft.xtm")
(sys:load "libs/external/audio_dsp_ext.xtm")

(default-audio-setup)

;; make sure you put your stereo IR file in here!!
(bind-func dsp:DSP 100000000
  (let ((convl (creverb_c "assets/ir/minsterl.aif"))
        (convr (creverb_c "assets/ir/minsterr.aif"))
        (wet 2.0)
        (dry 0.3)
        (i 0))
    (lambda (in time chan dat)
      (* 3.0
         (cond ((= chan 0)
                (convl (* 1.0 (sampler in time chan dat)) dry wet))
               ((= chan 1)
                (convr (* 1.0 (sampler in time chan dat)) dry wet))
               (else 0.0:f))))))

(load-sampler sampler "~/Documents/samples/piano/")

(sampler.release 5000)
(sampler.attack 2000)

;; make some noise
(define test
  (lambda (beat dur)
    (play sampler 72 100 10.0 0 0.2)
    (play 2 sampler 77 100 10.0 0 0.8)
    (play 4 sampler 68 100 8.0 0 0.6)
    (play 7 sampler 75 100 12.0 0 0.4)
    (play 10 sampler 70 100 11.0 0 0.55)
    (play 12 sampler 67 100 7.0 0 0.45)
    (callback (*metro* (+ beat (* .5 dur))) 'test (+ beat dur) dur)))

(test (*metro* 'get-beat 4) 16)
